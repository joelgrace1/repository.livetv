<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.direto" name="TV Direto" version="1.0.1" provider-name="Joel">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
      </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">TV Direto</summary>
    <description lang="en">Podes ver aqui tudo que eu te deixar! Mama mas não abuzes!</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.livetv" name="LiveTV" version=“1.0.1” provider-name="Joel"> 
 	<extension point="xbmc.addon.repository" name="Joel Repo"> 
 		<info compressed="false">https://raw.githubusercontent.com/joelgrace1/repository.livetv/master/addons.xml</info> 
 		<checksum>https://raw.githubusercontent.com/joelgrace1/repository.livetv/master/addons.xml.md5</checksum> 
 		<datadir zip="true">https://raw.githubusercontent.com/joelgrace1/repository.livetv/master/addons/</datadir> 
	</extension> 
 	<extension point="xbmc.addon.metadata"> 
 		<summary>Install add-ons from Joels Repository</summary> 
 		<description>Download and install add-ons from the Live Tv Repository Plugin by Joel</description> 
 		<platform>all</platform> 
 	</extension> 
</addon> 
</addons>
