<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.program.amoboxnotifications" version="1.0.0"
       name="Team Maniac Notifications" provider-name="AMObox">
  <requires>
  	<import addon="xbmc.python" version="2.1.0"/>
  	<import addon="script.module.addon.common" optional="true" />
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
  	<summary>AMObox NEWS</summary>
  	<description>Recebe as mais recentes novidades da Team Maniac mal abres o Kodi. Cancelar subscrição nas definições do Addon.</description>
  	<disclaimer>Nós não assumimos qualquer responsabilidade por eventuais problemas este plugin possa causar.</disclaimer>
  	<language>en</language>
  	<platform>all</platform>
  	<website>http://amobox.comlu.com</website>
  	<source>http://maniac.comxa.com/repo</source>
  	<email>amobox.uk@gmail.com</email>
  </extension>
</addon>
